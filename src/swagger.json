{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "E-commerce app Doucmented with swagger",
    "description": "an api for serve e-commerce-app",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "/",
      "description": "Local Dev, or from Render"
    },
    {
      "url": "/api/",
      "description": ""
    }
  ],
  "tags": [
    {
      "name": "User",
      "description": "API for users in the system"
    }
  ],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/users/signup/": {
      "post": {
        "tags": ["User"],
        "summary": "Create a new user",
        "requestBody": {
          "description": "User Object",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/UserSignup"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "msg": {
                      "type": "string",
                      "example": "تم تسجيل المستخدم بنجاح"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/login/": {
      "post": {
        "tags": ["User"],
        "summary": "Authenticate a user",
        "requestBody": {
          "description": "User Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/UserLogin"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "msg": {
                      "type": "string",
                      "example": "تم الدخول بنجاح"
                    },
                    "token": {
                      "type": "string",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6NywiZW1haWwiOiJ0ZXN0QG1pbC5lZyIsImlhdCI6MTY4NDc2NDU1Mn0"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "UserLogin": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "UserSignup": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "fName": {
          "type": "string"
        },
        "lName": {
          "type": "string",
          "required": "false"
        },
        "password": {
          "type": "string"
        },
        "role": {
          "type": "string",
          "enum": ["CLIENT", "COMPANY"]
        }
      }
    },
    "User": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "fullName": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "profile": {
          "type": "object",
          "properties": {
            "fName": {
              "type": "string"
            },
            "lName": {
              "type": "string"
            },
            "url": {
              "type": "string"
            }
          }
        }
      }
    },

    "Users": {
      "type": "object",
      "properties": {
        "cats": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/User"
          }
        }
      }
    }
  }
}
